<%= form_for(@contact_mail, :url => send_contact_path, :html => {:method => :post}) do |f| %>
  <% if @contact_mail.errors.any? %>
    <div class="error">
      <p>Uw bericht kan niet verzonden worden om de volgende reden:</p>
      <ul>
      <% @contact_mail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div>
		<%= f.label 'Onderwerp:' %><br />    
		<%= f.text_field :subject, :class => "span-14" %>
 	</div>
	<div>
		<%= f.label 'Uw bericht:' %><br />    
		<%= f.text_area :message, :rows=>10, :class => "span-14" %>
 	</div>
 	<div>
   	<%= f.label 'Uw e-mail adres of telefoonnummer:' %><br />
   	<%= f.text_field :info, :class => "span-14" %>
 	</div>
 	<div>
   	<%= f.label 'Uw adres of woonplaats:' %><br />
   	<%= f.text_field :address, :class => "span-14" %>
 	</div>
 	<div class="sweetness">
   	<%= text_field_tag('its_so_sweet[email]','john@doe.com',:tabindex=>900) %>
   	<%= text_field_tag('its_so_sweet[name]','',:tabindex=>901) %>
   	<%= check_box_tag('its_so_sweet[agree]',1,false,:tabindex=>902) %>
 	</div>  
	<div class="actions">
   	<%= f.submit "Verzenden"%>
 	</div>
  </div>
<% end %>
