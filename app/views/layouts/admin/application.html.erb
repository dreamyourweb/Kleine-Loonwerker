<!DOCTYPE html>
<html>
<head>
  <title>De Kleine Loonwerker | Admin</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
	<script type="text/javascript" src="/wymeditor/jquery.wymeditor.pack.js"></script>
	<script type="text/javascript">
		jQuery(function() {
	    	jQuery(".wymeditor").wymeditor({
	    		jQueryPath: "/assets/application.js",
				stylesheet: "/wymeditor/wymcss.css"
	    	});
		});
	</script>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container showgrid">
		<div id="notice">
			<% flash.each do |key, value| %>
  			<%= content_tag(:div, value, :class => "site-flash #{key}") %>
			<% end %>
		</div>
		<% if admin_signed_in? %>
			<div id="admin-box">
				<%= link_to "Pagina's beheren", admin_pages_path %><br>
				<%= link_to "Slideshows beheren", pictures_path %><br>
				<%= link_to "Logout", logout_path %>
			</div>
		<% end %>
		<header class="span-24">
			<h1>De Kleine Loonwerker</h1>
			<nav id="main-navigation" class="align-right">
				<%= link_to "Home", root_path, :class => controller_active?('home') %>
				<%= link_to "Diensten", diensten_grondwerk_path, :class => controller_active?('diensten') %>
				<%= link_to "Verhuur", verhuur_path, :class => controller_active?('verhuur') %>
				<%= link_to "Over ons", about_path, :class => controller_active?('about') %>
				<%= link_to "Contact", contact_path, :class => controller_active?('contact') %>
			</nav>
		</header>

		<%= yield %>
	</div>
</body>
</html>
